  <h1 class="loginHeading">
    <span class="fa fa-sign-in-alt"></span>
    Login
  </h1>

  <form method="post" action="/login">
    <div class="form-group">
      <label for="username" class="forLabel">Username:</label>
      {{#if context.username}}
        <input
          type="text"
          id="username"
          class="form-control"
          name="username"
          placeholder="Enter username"
          value={{context.username}}
          required="required"
        />
      {{else}}
        <input
          type="text"
          id="username"
          class="form-control"
          name="username"
          placeholder="Enter username"
          required="required"
          autofocus="autofocus"
        />
      {{/if}}
    </div>
    <div class="form-group">
      <label for="password" class="forLabel">Password:</label>
      {{#if context.username}}
        <input
          type="password"
          id="password"
          class="form-control"
          name="password"
          placeholder="Enter password"
          required="required"
          autofocus="autofocus"
        />
      {{else}}
        <input
          type="password"
          id="password"
          class="form-control"
          name="password"
          placeholder="Enter password"
          required="required"
        />
      {{/if}}
    </div>
    <button
      type="submit"
      class="btn btn-lg btn-primary forButton"
    >Login</button>
    <a
      href="/user/register"
      role="button"
      class="btn btn-lg btn-secondary forButton"
    >Sign up</a>
  </form>

<style>
  .loginHeading{ text-align: center; margin: 20px 0px; } .forLabel{ font-size:
  20px; font-weight: 600; margin-top: 12px; } .forButton{ margin-top: 20px; }
</style>